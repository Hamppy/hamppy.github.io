{% extends "base.njk" %}

{% block content %}
  <section class="site-about-header">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="site-about-wrapper">
              <div class="site-about-company">
                <h1 class="pitch">- Two decades of diverse design experience combined with relentless curiosity and hunger for learning -</h1>
                <div id='stars'></div>
                <div id='stars2'></div>
                <div id='stars3'></div>
              </div>
              <div class="site-about-description">
                <h2 class="emphasis">
                  {{hdr}}
                </h2>
                <br />
                <p>
                  {{des}}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="expertise">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="exp-title-centered">
              <h2>{{expertises.title}}</h2>
            </div>
          </div>
          <div class="container">
            {% for verifiedExperiences in expertises.verifiedExperiences %}
              <button type="button" class="expander" aria-expanded="false">
                <div class="row">
                  <div class="col-lg-6 col-md-6" style="text-align: left;">
                    <p class="position">
                      <span style="font-weight: 500;">{{verifiedExperiences.title}}</span>
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6" style="text-align: right; padding-right: 33px;">
                    <p class="position">
                      {{verifiedExperiences.startDate}}&nbsp;-&nbsp;{{verifiedExperiences.endDate}}
                    </p>
                  </div>
                </div>
                <img class="logo" src="{{verifiedExperiences.icon}}" alt="[{{verifiedExperiences.altText}}]">&nbsp;
              </button>
              <div class="content">
                <table>
                  <table><thead>
                    <tr>
                      <td class="notch">
                        <p>&#9493;</p>
                      </td>
                      <td>
                        <p>{{verifiedExperiences.employer}}</p>
                        <p>{{verifiedExperiences.description}}</p>
                        <div style="margin-bottom: 32px;">
                          {% for badge in verifiedExperiences.badges %}
                          <p class="badge badge-pill badge-secondary" style="margin-bottom: 0px">{{badge}}</p>
                          {% endfor %}
                        </div>
                      </td>
                    </tr>
                  </thead>
                </table>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="skillset">
      <div class="container">
        <div class="col-12">
          <div class="exp-title-centered">
            <h2>{{skills.title}}</h2>
          </div>
        </div>
        <div class="row">
          {% for category in skills.categories %}
          <div class="col-sm-4">
            <h3 class="skill-category">{{category.categoryName}}</h3>
            {% for skill in category.skills %}
              <p style="float: left; margin: 16px 0px 8px 0px; display: inline">{{skill.name}}</p>
              <p style="float: right; margin: 16px 0px 8px 0px; display: inline">{{skill.status}}</p>
