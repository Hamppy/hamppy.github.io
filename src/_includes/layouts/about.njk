                  />
                  <path 
                    d="M154.8,0l34.4,0l-17.217,16.517l-17.183,-16.517Z" style="fill:var(--background);"
                  />
                  <path 
                    d="M68.8,33l17.183,-16.483l17.217,16.483l-34.4,0Z" style="fill:var(--background);"
                  />
                  <path 
                    d="M68.8,0l34.4,0l-17.217,16.517l-17.183,-16.517Z" style="fill:var(--background);"
                  />
                  <path 
                    d="M17.2,33.034l-17.2,-16.534l17.2,-16.466l-17.203,-0l0,32.907l17.203,0.093Z"
                    style="fill:var(--background);"
                  />
