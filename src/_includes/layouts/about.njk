{% extends "base.njk" %}

{% block content %}
    <section class="site-about-header">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="site-about-wrapper">
              <div class="site-about-company">
                <h1 class="pitch">Two decades of diverse design experience combined with relentless curiosity and hunger for learning</h1>
                <div id='stars'></div>
                <div id='stars2'></div>
                <div id='stars3'></div>
              </div>
              <div class="site-about-description">
                <h2 class="emphasis">
                  {{hdr}}
                </h2>
                <br />
                <p>
                  {{des}}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="site-expertise">
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <div class="section-title">
              <h3>{{expertise.title1}}</h3>
            </div>
          </div>
          <div class="col-md-6">
            <ul class="site-expertise-list">
              {% for expertIn in expertise.expertIn %}
              <li>{{expertIn}}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col-md-5">
            <div class="section-title">
              <h3>{{expertise.title2}}</h3>
            </div>
          </div>
          <div class="col-md-6">
            <ul class="site-expertise-list">
              {% for beginnerWith in expertise.beginnerWith %}
              <li>{{beginnerWith}}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="site-client">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="tool-title-centered">
              <h3>{{tools.title}}</h3>
            </div>
            <div class="site-client-wrapper">
              {% for trustedTools in tools.trustedTools %}
              <div class="site-client-item">
                <a href="{{trustedTools.link}}" target="_blank"><img class="icon" src="{{trustedTools.icon}}" alt="[{{trustedTools.altText}}]"></a>
              </div> 
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>

